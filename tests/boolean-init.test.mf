println(`boolean::init(true) is ` + repr(boolean::init(true)));
println(`boolean::init(false) is ` + repr(boolean::init(false)));
println(`boolean::init(123) is ` + repr(boolean::init(123)));
println(`boolean::init(0) is ` + repr(boolean::init(0)));
println(`boolean::init(Inf) is ` + repr(boolean::init(Inf)));
println(`boolean::init(NaN) is ` + repr(boolean::init(NaN)));
println(`boolean::init("true") is ` + repr(boolean::init("true")));
println(`boolean::init("false") is ` + repr(boolean::init("false")));

print("\n");

try { boolean::init(null); } catch err { println(`boolean::init(null) produces ` + repr(err)); }
try { boolean::init("foo"); } catch err { println(`boolean::init("foo") produces ` + repr(err)); }
try { boolean::init(Map{}); } catch err { println(`boolean::init(Map{}) produces ` + repr(err)); }
