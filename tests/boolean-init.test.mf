println($`boolean::init(true) is {boolean::init(true)}`);
println($`boolean::init(false) is {boolean::init(false)}`);
println($`boolean::init(123) is {boolean::init(123)}`);
println($`boolean::init(0) is {boolean::init(0)}`);
println($`boolean::init(Inf) is {boolean::init(Inf)}`);
println($`boolean::init(NaN) is {boolean::init(NaN)}`);
println($`boolean::init("true") is {boolean::init("true")}`);
println($`boolean::init("false") is {boolean::init("false")}`);

print("\n");

try { boolean::init(null); } catch err { println($`boolean::init(null) produces the error {repr(err)}`); }
try { boolean::init("foo"); } catch err { println($`boolean::init("foo") produces the error {repr(err)}`); }
try { boolean::init(Map{}); } catch err { println($`boolean::init(Map{{}}) produces the error {repr(err)}`); }
################################################################################
# boolean::init(true) is true
# boolean::init(false) is false
# boolean::init(123) is true
# boolean::init(0) is false
# boolean::init(Inf) is true
# boolean::init(NaN) is false
# boolean::init("true") is true
# boolean::init("false") is false
#
# boolean::init(null) produces the error "cannot convert value null to boolean"
# boolean::init("foo") produces the error "cannot convert value \"foo\" to boolean"
# boolean::init(Map{}) produces the error "cannot convert value Map{} to boolean"
